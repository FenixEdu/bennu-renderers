<web-fragment xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
    version="3.0">
    <name>${artifactId}</name>
    <description>${name}</description>

    <filter>
        <filter-name>RequestWrapperFilter</filter-name>
        <filter-class>org.fenixedu.bennu.struts.servlet.RequestWrapperFilter</filter-class>
    </filter>

    <!-- Filter Mapping -->
    <filter-mapping>
        <filter-name>RequestWrapperFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

</web-fragment>
